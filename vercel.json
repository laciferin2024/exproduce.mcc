{
  "version": 2,
  "builds": [
    {
      "src": "remix.config.js",
      "use": "@vercel/remix"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "installCommand": "bun install && cd hardhat && bun i",
  "buildCommand": "bun run build",
  "devCommand": "bun run dev",
  "outputDirectory": "build",
  "public": true
}